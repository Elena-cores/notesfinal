<%- include("header", {}) %>
<h1> <%=title%> </h1>
<div>
    <p>Users registered in the system</p>
</div>

<table cellpadding="8" cellspacing="0" border="1">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password (hash)</th>
      <th>Last Login</th>
    </tr>
  </thead>
  <tbody>
    <% if (users && users.length > 0) { %>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.username %></td>
          <td style="word-break: break-all; max-width: 300px;"><%= user.hash %></td>
          <td><%= user.last_Login || 'Never' %></td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="3">No users found in database</td>
      </tr>
    <% } %>
  </tbody>
</table>

<div style="margin-top: 20px;">
  <p>Total users: <%= users ? users.length : 0 %></p>
</div>

<%- include("footer", {}) %>